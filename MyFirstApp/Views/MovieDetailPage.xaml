<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstApp.Views.MovieDetailPage"
             Title="Детали фильма">

    <StackLayout Padding="20">
        <Label Text="{Binding Movie.Title}" FontSize="24" FontAttributes="Bold" />
        <Label Text="{Binding Movie.Genre}" FontSize="18" TextColor="Gray" />

        <Label Text="Актёры:" FontSize="20" Margin="0,20,0,10"/>
        <CollectionView ItemsSource="{Binding Actors}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Name}" FontSize="16" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>

