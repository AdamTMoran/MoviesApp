<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstApp.MainPage"
             Title="Фильмы">

    <StackLayout Padding="20">
        <SearchBar Placeholder="Поиск..." Text="{Binding SearchQuery}" />

        <Label Text="Фильмы:" FontSize="20" Margin="0,20,0,10"/>
        <CollectionView ItemsSource="{Binding Movies}"
    SelectionMode="Single"
    SelectionChanged="OnMovieTapped">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="18"/>
                        <Label Text="{Binding Genre}" FontSize="14" TextColor="Gray"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>


